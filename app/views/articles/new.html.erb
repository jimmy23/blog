<%= form_for :article, url: articles_path, role: "form", class: "form-horizontal" do |f| %>
	<div class="form-group">
		<%= f.label "title", "标题", class: "col-sm-1 control-label" %>

		<div class="col-sm-11">
			<%= f.text_field :title, class: "form-control", placeholder: "此处填写标题"  %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label "content", "内容", class: "col-sm-1 control-label" %>
		<div class="col-sm-11">
			<%= f.text_area :content, class: "form-control", style: "height:550px;", placeholder: "此处填写文章内容" %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-1 col-sm-offset-11">
			<%= submit_tag "保存", class: "btn btn-primary" %>
		</div>
	</div>

<% end %>

